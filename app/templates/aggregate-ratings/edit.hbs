{{!-- Page to edit aggregate-rating --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit aggregate-rating')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete aggregate-rating.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new aggregate-rating" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of aggregate-rating. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>ratingValue</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='ratingValue' editable=true}}</td>
</tr>
      <tr>
      <td>avgVeggieScore</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='avgVeggieScore' editable=true}}</td>
</tr>
      <tr>
      <td>count</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='count' editable=true}}</td>
</tr>

        <tr><td>foodEstablishment</td><td align='middle'>{{edit-belongs-to relName=changeset.foodEstablishment relType="food-establishment"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
