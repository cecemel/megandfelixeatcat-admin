{{!-- Page to edit reviewer --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit reviewer')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete reviewer.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new reviewer" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of reviewer. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>familyName</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='familyName' editable=true}}</td>
</tr>
      <tr>
      <td>firstname</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='firstname' editable=true}}</td>
</tr>

        
        

    </tbody>
  </table>
</div>
{{/with}}
