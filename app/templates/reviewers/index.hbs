{{!-- Page to list reviewers --}}
<div class="content">
  <h2 class="h2">{{show-models-link}} &lt; {{t (humanize 'reviewers')}}</h2>
  {{#data-table
     content=model
     isLoading=isLoadingModel
     filter=filter
     sort=sort
     page=page
     size=size
     as |table|}}
    {{#table.content as |c|}}
      {{#c.header}}
        {{th-sortable field='familyName' currentSorting=sort label=(t 'familyName')}}
{{th-sortable field='firstname' currentSorting=sort label=(t 'firstname')}}
        
        <th>{{!-- contains detail view action --}}</th>
        <th>{{!-- contains detail edit action --}}</th>
      {{/c.header}}
      {{#c.body as |row|}}
        {{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop="familyName"}}{{/with-rdfa-context}}
{{#with-rdfa-context tagName="td" model=row as |ctx|}}{{ctx.get prop="firstname"}}{{/with-rdfa-context}}
                
                {{#with-rdfa-context tagName="td" model=row as |ctx|}}{{#rdfa/link-to link-to='reviewers.show' value=row property="foaf:page"}}{{t "Open"}}{{/rdfa/link-to}}{{/with-rdfa-context}}
        <td>{{link-to (t 'Edit') 'reviewers.edit' row}}</td>
      {{/c.body}}
    {{/table.content}}
  {{/data-table}}

  <div class="actions">{{#link-to "reviewers.new" class="button" title=(t "Create new reviewer") tagName="button" }}{{t 'Create new reviewer'}}{{/link-to}}</div>
</div>
