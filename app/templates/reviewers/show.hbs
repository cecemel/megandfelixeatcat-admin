{{!-- Page to show details of reviewers --}}
{{#with-rdfa-context class="container" model=model as |ctx|}}
  <div class="page">
    <h2 class="h2">{{link-to (t "reviewer overview") "reviewers.index"}} &lt; {{t (humanize 'reviewer details')}}</h2>
    <div class="properties">
      <div class="properties__title">
        {{t (humanize 'reviewer data')}}
        <dl>
          <dt class="properties__label">URI</dt>
          <dd class="properties__data">{{#link-to "reviewers.show" model href=model.uri}}{{model.uri}}{{/link-to}}</dd>
          <dt class="properties__label">{{t "familyName"}}</dt> <dd class="properties__data">{{ctx.get prop="familyName"}}</dd>
<dt class="properties__label">{{t "firstname"}}</dt> <dd class="properties__data">{{ctx.get prop="firstname"}}</dd>
          
          
        </dl>
      </div>
    </div>
  </div>

  {{!-- Actions to go back to the list-view or edit reviewer if it's an editable application. --}}
  <div class="actions">
    <div class="button-group">
      {{#link-to "reviewers" class="button" title="Return to list" tagName='button'}}{{t "< Return to the list"}}{{/link-to}}
      {{#link-to "reviewers.edit" model class="button" title=(t (humanize "Edit this reviewer")) tagName="button"}}{{t 'edit'}}{{/link-to}}
    </div>
  </div>
{{/with-rdfa-context}}
