{{!-- Page to create a new rating --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New rating')}}</h2>

  {{!--
    Actions to save new rating
    or delete new rating.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new rating" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of rating. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>ratingValue</td>
<td align='middle'>{{handle-attribute model=model attribute='ratingValue' editable=true}}</td>
      </tr>
      <tr>
        <td>veggieScore</td>
<td align='middle'>{{handle-attribute model=model attribute='veggieScore' editable=true}}</td>
      </tr>
      <tr>
        <td>created</td>
<td align='middle'>{{handle-date model=model attribute='created' editable=true}}</td>
      </tr>
      <tr><td>review</td><td align='middle'>{{edit-belongs-to relName=model.review relType="review"}}</td></tr>
      <tr><td>foodEstablishment</td><td align='middle'>{{edit-belongs-to relName=model.foodEstablishment relType="food-establishment"}}</td></tr>
      
    </tbody>
  </table>
</div>
