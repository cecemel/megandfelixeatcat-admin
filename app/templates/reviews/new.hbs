{{!-- Page to create a new review --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New review')}}</h2>

  {{!--
    Actions to save new review
    or delete new review.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new review" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of review. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>reviewBody</td>
<td align='middle'>{{handle-attribute model=model attribute='reviewBody' editable=true}}</td>
      </tr>
      <tr>
        <td>headline</td>
<td align='middle'>{{handle-attribute model=model attribute='headline' editable=true}}</td>
      </tr>
      <tr>
        <td>created</td>
<td align='middle'>{{handle-date model=model attribute='created' editable=true}}</td>
      </tr>
      <tr><td>rating</td><td align='middle'>{{edit-belongs-to relName=model.rating relType="rating"}}</td></tr>
      <tr><td>foodEstablishment</td><td align='middle'>{{edit-belongs-to relName=model.foodEstablishment relType="food-establishment"}}</td></tr>
      <tr><td>authors</td><td align='middle'>{{edit-has-many relName=model.authors relType="reviewer"}}</td></tr>
    </tbody>
  </table>
</div>
