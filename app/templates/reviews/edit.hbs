{{!-- Page to edit review --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit review')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete review.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new review" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of review. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>reviewBody</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='reviewBody' editable=true}}</td>
</tr>
      <tr>
      <td>headline</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='headline' editable=true}}</td>
</tr>
      <tr>
      <td>created</td>
      <td align='middle'>{{handle-date model=changeset attribute='created' editable=true}}</td>
</tr>

        <tr><td>rating</td><td align='middle'>{{edit-belongs-to relName=changeset.rating relType="rating"}}</td></tr>
      <tr><td>foodEstablishment</td><td align='middle'>{{edit-belongs-to relName=changeset.foodEstablishment relType="food-establishment"}}</td></tr>
        <tr><td>authors</td><td align='middle'>{{edit-has-many relName=changeset.authors relType="reviewer"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
