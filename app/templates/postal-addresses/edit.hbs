{{!-- Page to edit postal-address --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit postal-address')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete postal-address.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new postal-address" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of postal-address. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>country</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='country' editable=true}}</td>
</tr>
      <tr>
      <td>region</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='region' editable=true}}</td>
</tr>
      <tr>
      <td>postalCode</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='postalCode' editable=true}}</td>
</tr>

        
        

    </tbody>
  </table>
</div>
{{/with}}
